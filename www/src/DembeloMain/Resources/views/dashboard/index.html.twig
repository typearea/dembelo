{% extends 'DembeloMain::base.html.twig' %}

{% block bodyid %}dashboard{% endblock %}

{% block body %}
    <div class="genres">
        <div class="row">
            {% for licensee in topics %}
                <div class="cover">
                    <a href="{{ path('themenfeld', {'topicId': licensee.id}) }}">
                        {% image '@DembeloMain/Resources/public/images/placeholder.jpg' %}
                        <img src="{{ asset_url }}" alt="{{ licensee.name }}" title="{{ licensee.name }}"/>
                        {% endimage %}
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}