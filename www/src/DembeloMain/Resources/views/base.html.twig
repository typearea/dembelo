<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% if block('title') is defined %}
        {% set titleBlock = block('title') %}
    {% else %}
        {% set titleBlock = "" %}
    {% endif %}
    <title>was zu lesen{% if titleBlock is not empty %} - {{ titleBlock|raw }}{% endif %}</title>

    {# Open Graph Tags, used by Facebook for sharing #}
    <meta property="og:url"           content="{{ app.request.uri }}" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Was zu lesen" />
    <meta property="og:description"   content="Literatur digital gedacht" />
    <meta property="og:image"         content="//www.dembelo.de/img/Logo%20schwarz.jpg" />

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/dembelo.css') }}">
    {% endblock %}
</head>
<body id="{% block bodyid %}{% endblock %}">
{% include "@DembeloMain/partials/toolbar.html.twig" %}
{% include "@DembeloMain/partials/navigation.html.twig" %}
<main>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>
{% block javascripts %}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript" src="{{ asset('build/js/dembelo.js') }}"></script>
    <script type="text/javascript" src="{{ asset('build/js/modal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('build/js/navigation.js') }}"></script>
    <script type="text/javascript" src="{{ asset('build/js/toolbar.js') }}"></script>
    <script type="text/javascript" src="{{ asset('build/js/touch.js') }}"></script>
{% endblock %}
{# Piwik #}
<script type="text/javascript">
    var _paq = _paq || [];
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function () {
        var u = "{{ piwik_host }}";
        _paq.push(['setTrackerUrl', u + 'piwik.php']);
        _paq.push(['setSiteId', {{ piwik_id }}]);
        var d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
        g.type = 'text/javascript';
        g.async = true;
        g.defer = true;
        g.src = u + 'piwik.js';
        s.parentNode.insertBefore(g, s);
    })();
</script>
<noscript><p><img src="{{ piwik_host }}piwik.php?idsite={{ piwik_id }}" style="border:0;" alt=""/></p></noscript>
{# End Piwik #}

</body>
</html>
